{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "Milovan Gudelj",
    "email": "milovan.gudelj@gmail.com"
  },
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./components/index.ts",
  "files": [
    "./dist/**/*",
    "./src/components/**/*"
  ],
  "exports": {
    ".": [
      "./src/components/index.ts",
      "./dist/index.d.ts",
      "./dist/index.d.ts.map"
    ],
    "./styles.css": "./dist/index.css",
    "./globals.css": "./src/styles/globals.css"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build:types": "tsc",
    "build:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/index.css --minify",
    "build": "pnpm clean && pnpm build:types && pnpm build:css",
    "lint": "eslint src/components/",
    "dev": "pnpm clean && concurrently \"pnpm build:types --watch\" \"pnpm build:css --watch\"",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/tailwind-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^9.5.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.6",
    "@repo/i18n": "workspace:^",
    "@repo/sanity": "workspace:^",
    "framer-motion": "^11.2.11",
    "next": "^14.2.4",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.3.0"
  }
}