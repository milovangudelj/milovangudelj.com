{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "Milovan Gudelj",
    "email": "milovan.gudelj@gmail.com"
  },
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./components/index.tsx",
  "files": [
    "./dist/**/*",
    "./src/components/**/*"
  ],
  "exports": {
    ".": [
      "./src/components/index.tsx",
      "./dist/index.d.ts",
      "./dist/index.d.ts.map"
    ],
    "./styles.css": "./dist/index.css",
    "./globals.css": "./src/styles/globals.css"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build:types": "tsc",
    "build:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/index.css --minify",
    "build": "pnpm clean && pnpm build:types && pnpm build:css",
    "lint": "eslint src/components/",
    "dev": "pnpm clean && concurrently \"pnpm build:types --watch\" \"pnpm build:css --watch\"",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/eslint": "^8.56.1",
    "@types/node": "^20.10.7",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
