{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "website#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["SPOTIFY_AUTHORIZATION", "SUPABASE_SERVICE_KEY"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "start": {
      "dependsOn": ["^start"],
      "env": ["SPOTIFY_AUTHORIZATION", "SUPABASE_SERVICE_KEY"]
    }
  },
  "globalEnv": ["NODE_ENV"]
}
