{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./*"],
      "~components": ["./components"],
      "~components/*": ["./components/*"],
      "~lib": ["./lib"],
      "~lib/*": ["./lib/*"],
      "~utils": ["./utils"],
      "~utils/*": ["./utils/*"],
      "~types": ["./types"],
      "~types/*": ["./types/*"],
      "~styles": ["./styles"],
      "~styles/*": ["./styles/*"],
      "~images": ["./public/images"],
      "~images/*": ["./public/images/*"]
    }
  },
  "include": ["next-env.d.ts", "next.config.js", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
